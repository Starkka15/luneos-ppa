# LuneOS Ubuntu Desktop Configuration
# Product-specific environment variables for Luna Surface Manager

# Qt Platform - use eglfs for direct rendering
QT_QPA_PLATFORM=eglfs
QT_QPA_EGLFS_INTEGRATION=eglfs_kms

# Input method
QT_IM_MODULE=Maliit

# Hardware integration for Wayland clients
QT_WAYLAND_HARDWARE_INTEGRATION=linux-dmabuf-unstable-v1

# Compositor settings
WEBOS_COMPOSITOR_PLATFORM=eglfs
WEBOS_COMPOSITOR_DISPLAYS=1

# Cursor settings (0 = visible)
WEBOS_CURSOR_HIDE=0
WEBOS_CURSOR_TIMEOUT=0

# Default geometry (will be auto-detected if possible)
# WEBOS_COMPOSITOR_GEOMETRY=1920x1080+0+0r0s1
